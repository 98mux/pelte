{
	"compilerOptions": {
		"strict": true,
		"sourceMap": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "es2018",
		"lib": ["es2018"],
		"declaration": true,
		"skipLibCheck": true,
		"checkJs": true,
		"types": ["jest", "node"],
		"outDir": "dist",
		"allowJs": true
	},
	"include": ["src/**/*.js"],
	"exclude": [
		"**/node_modules/**/*",
		"**/dist",
		"**/tests/fixtures/**/*.svelte"
	]
}
